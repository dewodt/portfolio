---
import GitHubIcon from "@/components/icons/GitHubIcon.astro";
import LinkedInIcon from "@/components/icons/LinkedInIcon.astro";
import InstagramIcon from "@/components/icons/InstagramIcon.astro";
import EmailIcon from "@/components/icons/EmailIcon.astro";
import SpotifyIcon from "@/components/icons/SpotifyIcon.astro";

interface SocialMedia {
  name: string;
  url: string;
  icon: any;
  className: string;
}

const socialMedia: SocialMedia[] = [
  {
    name: "GitHub",
    url: "https://github.com/dewodt",
    icon: GitHubIcon,
    className:
      "fill-muted transition-all duration-200 group-hover:fill-secondary",
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/dewantoro-triatmojo/",
    icon: LinkedInIcon,
    className:
      "fill-muted transition-all duration-200 group-hover:fill-secondary",
  },
  {
    name: "Email",
    url: "mailto:dewantorotriatmojo@gmail.com",
    icon: EmailIcon,
    className:
      "stroke-muted transition-all duration-200 group-hover:stroke-secondary",
  },
  {
    name: "Instagram",
    url: "https://www.instagram.com/dewo.tm/",
    icon: InstagramIcon,
    className:
      "fill-muted transition-all duration-200 group-hover:fill-secondary",
  },
  {
    name: "Spotify",
    url: "https://open.spotify.com/user/0p89rcit1qulphp6uzgsi0tto",
    icon: SpotifyIcon,
    className:
      "fill-muted transition-all duration-200 group-hover:fill-secondary",
  },
];
---

<div class="sticky bottom-6 z-30 mx-auto mb-6">
  <ul
    class="flex flex-row items-center justify-center gap-3 rounded-full border border-border bg-card-darker p-2"
  >
    {
      socialMedia.map((social) => (
        <li>
          <a
            href={social.url}
            aria-label={social.name}
            target="_blank"
            class="group flex size-12 rounded-full p-2.5 transition-all duration-200 hover:bg-primary/35"
          >
            {<social.icon class:list={["size-full", social.className]} />}
          </a>
        </li>
      ))
    }
  </ul>
</div>

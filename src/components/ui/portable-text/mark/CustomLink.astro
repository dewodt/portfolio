---
import type { Props as $, Mark as MarkType } from "astro-portabletext/types";

// Generic is for markDef type
type Props = $<MarkType<Record<string, string>>>;
const props = Astro.props;
---

<a
  href={props.node.markDef.href}
  target="_blank"
  class="text-primary hover:text-primary-hover inline-block font-medium underline-offset-4 transition-colors duration-200 hover:underline"
>
  <slot />
</a>

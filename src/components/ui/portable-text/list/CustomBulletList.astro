---
import type { Props as $, List as ListType } from "astro-portabletext/types";

export type Props = $<ListType>;

const props = Astro.props;
const level = props.node.level;
---

<ul
  class:list={[
    "mb-1 list-inside lg:mb-3",
    // Spacing
    level === 1 ? "ml-1" : "ml-6",
    // Type
    (level - 1) % 3 === 0 && "list-disc",
    (level - 1) % 3 === 1 && "list-circle",
    (level - 1) % 3 === 2 && "list-square",
  ]}
>
  <slot />
</ul>

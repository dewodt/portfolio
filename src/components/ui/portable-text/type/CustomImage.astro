---
import { Image } from "astro:assets";

import type { Props as $, TypedObject } from "astro-portabletext/types";

export type Props = $<TypedObject> & {
  node: {
    url: string;
    alt: string;
  };
};

const props = Astro.props;
---

<figure class="flex flex-col gap-1 lg:gap-2">
  <Image
    class="w-full rounded-lg"
    src={props.node.url}
    alt={props.node.alt}
    inferSize
  />
  <figcaption class="text-center text-base font-medium lg:text-lg">
    {props.node.alt}
  </figcaption>
</figure>

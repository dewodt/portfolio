---
import CopyIcon from "@/components/icons/CopyIcon.astro";
import { transformerMetaHighlight } from "@shikijs/transformers";
import type { CodeLanguage } from "astro";
import { Code } from "astro:components";

// Props
interface Props {
  language: string;
  code: string;
  filename?: string;
  highlightedLines: number[];
}
const { language, code, filename, highlightedLines } = Astro.props;
---

<custom-block-code data-language={language}>
  <div
    class="code-block mb-5 flex flex-col overflow-hidden rounded-md border text-sm lg:mb-6 lg:text-base"
  >
    <div
      class="code-block-header flex h-12 flex-row items-center justify-between border-b pr-2 pl-4"
    >
      {/* Filename */}
      {
        filename ? (
          <p class="leading-none">{filename}</p>
        ) : (
          <p class="leading-none">{language}</p>
        )
      }

      {/* Copy button */}
      <button
        class="hover:bg-muted-foreground/15 inline-flex size-9 cursor-pointer items-center justify-center rounded-md transition-colors"
      >
        <CopyIcon class="size-4" />
      </button>
    </div>

    {/* Code */}
    <Code
      code={code}
      lang={language as CodeLanguage}
      class="text-sm lg:text-base"
      themes={{ light: "light-plus", dark: "dark-plus" }}
      defaultColor="light"
      meta={`{${highlightedLines.join(",")}}`}
      transformers={[transformerMetaHighlight()]}
      inline={false}
    />
  </div>
</custom-block-code>

<style is:global>
  /* Code block — light-plus theme (default) */
  .code-block {
    border-color: #e5e5e5;
    background-color: #ffffff;
  }

  .code-block-header {
    border-color: #e5e5e5;
    background-color: #f8f8f8;
    color: #6e7681;
  }

  /* Code block — dark-plus theme */
  .dark .code-block {
    border-color: #242425;
    background-color: #1e1e1e;
  }

  .dark .code-block-header {
    border-color: #242425;
    background-color: #181819;
    color: #cccccc;
  }

  pre:has(code) {
    padding: 20px 0px;
    overflow-x: auto;
  }

  pre code {
    display: grid;
    counter-reset: step;
    counter-increment: step 0;
  }

  pre code .line {
    padding-inline: 1rem;
  }

  /* Line numbers */
  pre code .line::before {
    content: counter(step);
    counter-increment: step;
    width: 1rem;
    margin-right: 1.25rem;
    display: inline-block;
    text-align: right;
    color: var(--muted-foreground);
  }

  /* Highlighted lines */
  pre code .line.highlighted {
    background-color: color-mix(in srgb, var(--primary) 10%, transparent);
  }

  .dark pre code .line.highlighted {
    background-color: color-mix(in srgb, var(--primary) 15%, transparent);
  }
</style>

<script>
  // Handle (each of) the custom block code
  class CustomBlockCode extends HTMLElement {
    constructor() {
      super();

      // Copy code to clipboard
      const copyButton = this.querySelector("button"); // only one button in the block
      copyButton?.addEventListener("click", () => {
        const code = this.querySelector("pre");
        const codeToCopy = code?.textContent ?? "";

        navigator.clipboard.writeText(codeToCopy).then(() => {
          const checkIcon = `
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-check size-4"
            >
              <path d="M20 6 9 17l-5-5"></path>
            </svg>
          `;

          const copyIcon = `
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-copy size-4"
            >
              <rect width="14" height="14" x="8" y="8" rx="2" ry="2"></rect>
              <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"></path>
            </svg>
          `;

          // Change the button content to a check icon
          copyButton.innerHTML = checkIcon;

          // Change the button content back to a copy icon after 1.5 second
          setTimeout(() => {
            copyButton.innerHTML = copyIcon;
          }, 1500);
        });
      });
    }
  }

  customElements.define("custom-block-code", CustomBlockCode);
</script>

---
import { Code } from "astro:components";

// Props
interface Props {
  language: string;
  code: string;
}

const { language, code } = Astro.props;
---

<Code
  code={code}
  lang={language as any}
  class="rounded-sm p-1 text-sm lg:text-base"
  themes={{ light: "light-plus", dark: "dark-plus" }}
  defaultColor="light"
  inline={true}
/>

---
import LinkIcon from "@/components/icons/LinkIcon.astro";

interface Props {
  deployment: {
    label: string;
    url: string;
  };
}

const { deployment } = Astro.props;
---

<li>
  <a
    href={deployment.url}
    target="_blank"
    class="group flex flex-row items-center gap-2"
  >
    <LinkIcon class="size-5 stroke-secondary lg:size-6" />
    <span
      class="text-base font-medium leading-none text-secondary underline-offset-4 group-hover:underline lg:text-lg lg:leading-none"
    >
      {deployment.label}
    </span>
  </a>
</li>

---
import FolderGitIcon from "@/components/icons/FolderGitIcon.astro";

interface Props {
  repository: {
    url: string;
    label: string;
  };
}

const { repository } = Astro.props;
---

<li>
  <a
    href={repository.url}
    target="_blank"
    class="group flex flex-row items-center gap-2"
  >
    <FolderGitIcon
      class="size-5 stroke-muted group-hover:stroke-secondary lg:size-6"
    />
    <span
      class="text-base font-medium leading-none text-muted underline-offset-4 group-hover:text-secondary group-hover:underline lg:text-lg lg:leading-none"
    >
      {repository.label}
    </span>
  </a>
</li>

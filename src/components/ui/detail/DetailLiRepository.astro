---
import GitHubIcon from "@/components/icons/GitHubIcon.astro";

interface Props {
  repository: {
    url: string;
    label: string;
  };
}

const { repository } = Astro.props;
---

<li>
  <a
    href={repository.url}
    target="_blank"
    class="group flex flex-row items-center gap-2"
  >
    <GitHubIcon class="size-5 fill-secondary lg:size-6" />
    <span
      class="text-base font-medium leading-none text-secondary underline-offset-4 group-hover:underline lg:text-lg lg:leading-none"
    >
      {repository.label}
    </span>
  </a>
</li>

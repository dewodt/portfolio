---
import ZoomableImage from "@/components/ui/image/zoomable-image.astro";

interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<figure>
  <ZoomableImage
    class="bg-card text-secondary flex aspect-video w-full items-center justify-evenly rounded-lg object-cover object-center text-base font-medium"
    src={src}
    alt={alt}
    widths={[576, 768, 1152, 1280, 1440]}
    sizes="(max-width: 1023px) 576px, 768px"
    loading="eager"
    inferSize
  />
</figure>

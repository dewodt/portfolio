---
import type { AllBlogsQueryResult } from "@/types/sanity";
import CardContainer from "./builder/CardContainer.astro";
import CardImage from "./builder/CardImage.astro";
import CardContent from "./builder/CardContent.astro";
import CardTitle from "./builder/CardTitle.astro";
import CardDate from "./builder/CardDate.astro";
import CardDescription from "./builder/CardDescription.astro";

interface Props {
  blog: AllBlogsQueryResult[number];
}

const { blog } = Astro.props;
---

<CardContainer
  href={`/blog/${blog.slug.current}`}
  ariaLabel={`Link to blog ${blog.title}`}
>
  {/* Card Image */}
  <CardImage src={blog.image.url!} alt={blog.image.alt} />

  {/* Card Content */}
  <CardContent>
    {/* Title */}
    <CardTitle>
      {blog.title}
    </CardTitle>

    {/* Date */}
    <CardDate date={blog.date} />

    {/* Short description */}
    <CardDescription>
      {blog.description}
    </CardDescription>
  </CardContent>
</CardContainer>

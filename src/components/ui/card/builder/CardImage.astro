---
import { Image } from "astro:assets";

interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<Image
  class="flex aspect-video w-full items-center justify-evenly bg-card object-cover object-center text-base font-medium text-secondary"
  src={src}
  alt={alt}
  widths={[320, 384]}
  sizes="(max-width: 640px) 320px, 384px"
  inferSize
/>

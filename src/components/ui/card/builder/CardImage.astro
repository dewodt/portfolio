---
import { Image } from "astro:assets";

interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<Image
  class="bg-card text-secondary flex aspect-video w-full items-center justify-evenly object-cover object-center text-base font-medium"
  src={src}
  alt={alt}
  widths={[320, 384, 640, 768]}
  sizes="(max-width: 1023px) 320px, 384px"
  inferSize
/>

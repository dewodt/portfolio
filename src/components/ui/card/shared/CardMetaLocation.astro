---
import MapPinIcon from "@/components/icons/MapPinIcon.astro";

interface Props {
  location: string;
  class?: string;
}

const { location, class: className } = Astro.props;
---

<span
  class:list={[
    "text-muted-foreground inline-flex items-center gap-1.5 font-mono text-xs tracking-widest uppercase",
    className,
  ]}
>
  <MapPinIcon class="size-3.5 shrink-0" />
  {location}
</span>

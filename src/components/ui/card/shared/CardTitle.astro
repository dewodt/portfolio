---
import ArrowRightIcon from "@/components/icons/ArrowRightIcon.astro";

interface Props {
  as?: "h2" | "h3";
  showArrow?: boolean;
  class?: string;
}

const { as: Tag = "h2", showArrow = true, class: className } = Astro.props;
---

<div class:list={["flex items-center gap-2", className]}>
  <Tag
    class:list={[
      "text-lg font-bold lg:text-xl",
      showArrow
        ? "text-foreground group-hover/card:text-primary transition-colors duration-200"
        : "text-foreground",
    ]}
  >
    <slot />
  </Tag>
  {
    showArrow && (
      <ArrowRightIcon class="text-primary size-4 shrink-0 -translate-x-1 opacity-0 transition-all duration-200 group-hover/card:translate-x-0 group-hover/card:opacity-100" />
    )
  }
</div>

---
import CalendarIcon from "@/components/icons/CalendarIcon.astro";

interface Props {
  date: string;
  class?: string;
}

const { date, class: className } = Astro.props;
---

<span
  class:list={[
    "text-muted-foreground inline-flex items-center gap-1.5 font-mono text-xs tracking-widest uppercase",
    className,
  ]}
>
  <CalendarIcon class="size-3.5 shrink-0" />
  <time datetime={date}><slot /></time>
</span>

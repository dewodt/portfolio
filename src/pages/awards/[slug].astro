---
import DetailAdjacentNavigation from "@/components/ui/detail/DetailAdjacentNavigation.astro";
import DetailBack from "@/components/ui/detail/DetailBack.astro";
import DetailDate from "@/components/ui/detail/DetailDate.astro";
import DetailDescription from "@/components/ui/detail/DetailDescription.astro";
import Divider from "@/components/ui/Divider.astro";
import DetailImage from "@/components/ui/detail/DetailImage.astro";
import DetailMonoLabel from "@/components/ui/detail/DetailMonoLabel.astro";
import DetailTitle from "@/components/ui/detail/DetailTitle.astro";
import CustomPortableText from "@/components/ui/portable-text/CustomPortableText.astro";
import LayoutBase from "@/layouts/LayoutBase.astro";
import { sanityClient, awardDetailQuery, allAwardsQuery } from "@/lib/query";
import {
  type AllAwardsQueryResult,
  type AwardDetailQueryResult,
} from "@/types/sanity";

export const getStaticPaths = async () => {
  const allAwardsData =
    await sanityClient.fetch<AllAwardsQueryResult>(allAwardsQuery);

  const paths = allAwardsData.map((award) => ({
    params: {
      slug: award.slug.current,
    },
  }));

  return paths;
};

const awardDetailData = await sanityClient.fetch<AwardDetailQueryResult>(
  awardDetailQuery,
  { slug: Astro.params.slug },
);

if (!awardDetailData) {
  throw new Error("Data not found");
}
---

<LayoutBase
  title={`${awardDetailData.title} | Dewantoro Triatmojo`}
  description={awardDetailData.description}
  linkPreviewImage={awardDetailData.image}
>
  <main class="flex flex-auto justify-center px-5 py-12 sm:p-12 lg:p-16">
    <div class="flex w-full max-w-xl flex-col gap-6 lg:max-w-3xl lg:gap-8">
      {/* Back Button */}
      <div class="animate-fade-in-up opacity-0" style="animation-delay: 0.1s;">
        <DetailBack href="/awards" label="Back to Awards" />
      </div>

      <article class="flex flex-col gap-6 lg:gap-8">
        {/* Hero Image */}
        <div
          class="animate-fade-in-scale border-border/50 bg-surface relative overflow-hidden rounded-xl border opacity-0"
          style="animation-delay: 0.2s;"
        >
          <DetailImage
            src={awardDetailData.image.url!}
            alt={awardDetailData.image.alt}
          />
          <div
            class="from-background/40 pointer-events-none absolute inset-0 bg-gradient-to-t via-transparent to-transparent"
          >
          </div>
        </div>

        {/* Header Section */}
        <header class="flex flex-col">
          {/* Mono label */}
          <div
            class="animate-fade-in-up mb-1.5 opacity-0 lg:mb-2.5"
            style="animation-delay: 0.3s;"
          >
            <DetailMonoLabel>Award</DetailMonoLabel>
          </div>

          {/* Title */}
          <div
            class="animate-fade-in-up mb-3 opacity-0 lg:mb-4"
            style="animation-delay: 0.4s;"
          >
            <DetailTitle>{awardDetailData.title}</DetailTitle>
          </div>

          {/* Description */}
          <div
            class="animate-fade-in-up mb-3 opacity-0 lg:mb-4"
            style="animation-delay: 0.5s;"
          >
            <DetailDescription>{awardDetailData.description}</DetailDescription>
          </div>

          {/* Metadata row */}
          <div
            class="animate-fade-in-up flex flex-wrap items-center gap-3 opacity-0"
            style="animation-delay: 0.6s;"
          >
            <span class="text-muted text-sm lg:text-base">
              {awardDetailData.issuer}
            </span>
            <DetailDate date={awardDetailData.date} />
          </div>
        </header>

        {/* Divider */}
        <div
          class="animate-fade-in-up opacity-0"
          style="animation-delay: 0.7s;"
        >
          <Divider />
        </div>

        {/* Content Section */}
        <section
          class="animate-fade-in-up w-full opacity-0"
          style="animation-delay: 0.8s;"
        >
          {
            (
              // @ts-ignore
              <CustomPortableText value={awardDetailData.content} />
            )
          }
        </section>

        {/* Adjacent Navigation */}
        <div
          class="animate-fade-in-up opacity-0"
          style="animation-delay: 0.9s;"
        >
          <Divider />
        </div>
        <div
          class="animate-fade-in-up opacity-0"
          style="animation-delay: 1.0s;"
        >
          <DetailAdjacentNavigation
            previous={awardDetailData.previous && {
              title: awardDetailData.previous.title,
              href: `/awards/${awardDetailData.previous.slug.current}`,
              description: awardDetailData.previous.description,
            }}
            next={awardDetailData.next && {
              title: awardDetailData.next.title,
              href: `/awards/${awardDetailData.next.slug.current}`,
              description: awardDetailData.next.description,
            }}
          />
        </div>
      </article>
    </div>
  </main>
</LayoutBase>

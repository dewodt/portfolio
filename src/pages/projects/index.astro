---
import ProjectCard from "@/components/ui/card/ProjectCard.astro";
import LayoutBase from "@/layouts/LayoutBase.astro";
import type {
  AllProjectsQueryResult,
  ProjectsPageQueryResult,
} from "@/types/sanity";
import { sanityClient, allProjectsQuery, projectsPageQuery } from "@/lib/query";

// Get projects page from CMS
const projectPageData =
  await sanityClient.fetch<ProjectsPageQueryResult>(projectsPageQuery);
// Get all projects from CMS
const allProjectsData =
  await sanityClient.fetch<AllProjectsQueryResult>(allProjectsQuery);

if (!projectPageData) {
  throw new Error("Failed to fetch projects page data");
}
---

<LayoutBase
  title={`${projectPageData.title} | Dewantoro Triatmojo`}
  description={projectPageData.description}
>
  <main class="flex flex-auto justify-center px-5 py-12 sm:p-12 lg:p-16">
    <section
      class="flex w-full max-w-6xl flex-col items-center gap-8 lg:gap-12"
    >
      {/* Header */}
      <div class="flex flex-col text-center">
        <span
          class="animate-fade-in-up text-primary mb-1.5 font-mono text-xs tracking-widest uppercase opacity-0 lg:mb-2.5 lg:text-sm"
          style="animation-delay: 0.1s;"
        >
          Portfolio
        </span>
        <h1
          class="animate-fade-in-up text-secondary mb-3 text-3xl font-bold opacity-0 lg:mb-4 lg:text-5xl"
          style="animation-delay: 0.2s;"
        >
          {projectPageData.title}
        </h1>
        <p
          class="animate-fade-in-up text-muted text-base opacity-0 lg:text-lg"
          style="animation-delay: 0.3s;"
        >
          {projectPageData.description}
        </p>
      </div>

      {/* Projects Grid */}
      <ul
        class="grid w-full grid-cols-1 gap-6 sm:grid-cols-2 lg:gap-8 xl:grid-cols-3"
      >
        {
          allProjectsData.map((project, index) => (
            <li
              class="animate-fade-in-up opacity-0"
              style={`animation-delay: ${0.3 + index * 0.05}s;`}
            >
              <ProjectCard project={project} />
            </li>
          ))
        }
      </ul>
    </section>
  </main>
</LayoutBase>

---
import DetailAdjacentNavigation from "@/components/ui/detail/DetailAdjacentNavigation.astro";
import DetailBack from "@/components/ui/detail/DetailBack.astro";
import DetailDateRange from "@/components/ui/detail/DetailDateRange.astro";
import DetailDescription from "@/components/ui/detail/DetailDescription.astro";
import Divider from "@/components/ui/Divider.astro";
import DetailImage from "@/components/ui/detail/DetailImage.astro";
import DetailMonoLabel from "@/components/ui/detail/DetailMonoLabel.astro";
import PillDeployment from "@/components/ui/pill/PillDeployment.astro";
import PillRepository from "@/components/ui/pill/PillRepository.astro";
import DetailTitle from "@/components/ui/detail/DetailTitle.astro";
import CustomPortableText from "@/components/ui/portable-text/CustomPortableText.astro";
import LayoutBase from "@/layouts/LayoutBase.astro";
import {
  sanityClient,
  projectDetailQuery,
  allProjectsQuery,
} from "@/lib/query";
import {
  type AllProjectsQueryResult,
  type ProjectDetailQueryResult,
} from "@/types/sanity";

export const getStaticPaths = async () => {
  const allProjectsData =
    await sanityClient.fetch<AllProjectsQueryResult>(allProjectsQuery);

  const paths = allProjectsData.map((project) => ({
    params: {
      slug: project.slug.current,
    },
  }));

  return paths;
};

const projectDetailData = await sanityClient.fetch<ProjectDetailQueryResult>(
  projectDetailQuery,
  { slug: Astro.params.slug },
);

if (!projectDetailData) {
  throw new Error("Data not found");
}
---

<LayoutBase
  title={`${projectDetailData.title} | Dewantoro Triatmojo`}
  description={projectDetailData.description}
  linkPreviewImage={projectDetailData.image}
>
  <main class="flex flex-auto justify-center px-5 py-10 sm:p-12 lg:p-16">
    <div class="flex w-full max-w-xl flex-col gap-6 lg:max-w-3xl lg:gap-8">
      {/* Back Button */}
      <div class="animate-fade-in-up" style="animation-delay: 0.05s;">
        <DetailBack href="/projects" label="Back to Projects" />
      </div>

      <article class="flex flex-col gap-6 lg:gap-8">
        {/* Hero Image */}
        <div
          class="border-border/50 bg-surface animate-fade-in-scale relative overflow-hidden rounded-xl border"
          style="animation-delay: 0.1s;"
        >
          <DetailImage
            src={projectDetailData.image.url!}
            alt={projectDetailData.image.alt}
          />
          <div
            class="from-background/40 pointer-events-none absolute inset-0 bg-gradient-to-t via-transparent to-transparent"
          >
          </div>
        </div>

        {/* Header Section */}
        <header class="flex flex-col">
          {/* Mono label */}
          <div
            class="animate-fade-in-up mb-1 lg:mb-2"
            style="animation-delay: 0.15s;"
          >
            <DetailMonoLabel
              >{projectDetailData.detailMonoLabel}</DetailMonoLabel
            >
          </div>

          {/* Title */}
          <div
            class="animate-fade-in-up mb-2 lg:mb-3"
            style="animation-delay: 0.2s;"
          >
            <DetailTitle>{projectDetailData.title}</DetailTitle>
          </div>

          {/* Description */}
          <div
            class="animate-fade-in-up mb-2 lg:mb-3"
            style="animation-delay: 0.25s;"
          >
            <DetailDescription
              >{projectDetailData.description}</DetailDescription
            >
          </div>

          {/* Metadata row */}
          <div
            class="animate-fade-in-up flex flex-wrap items-center gap-3"
            style="animation-delay: 0.3s;"
          >
            <DetailDateRange dateRange={projectDetailData.dateRange} />

            {
              (projectDetailData.repositoryLinks?.length ||
                projectDetailData.deploymentLinks?.length) && (
                <span class="text-muted text-sm lg:text-base">&middot;</span>
              )
            }
            <div class="flex flex-wrap items-center gap-3">
              {
                projectDetailData.repositoryLinks?.map((repo) => (
                  <PillRepository repository={repo} />
                ))
              }
              {
                projectDetailData.deploymentLinks?.map((deploy) => (
                  <PillDeployment deployment={deploy} />
                ))
              }
            </div>
          </div>
        </header>

        {/* Divider */}
        <div class="animate-fade-in-up" style="animation-delay: 0.35s;">
          <Divider />
        </div>

        {/* Content Section */}
        <section
          class="animate-fade-in-up w-full"
          style="animation-delay: 0.4s;"
        >
          {
            (
              // @ts-ignore
              <CustomPortableText value={projectDetailData.content} />
            )
          }
        </section>

        {/* Adjacent Navigation */}
        <div class="animate-fade-in-up" style="animation-delay: 0.45s;">
          <Divider />
        </div>
        <div class="animate-fade-in-up" style="animation-delay: 0.5s;">
          <DetailAdjacentNavigation
            previous={projectDetailData.previous && {
              title: projectDetailData.previous.title,
              href: `/projects/${projectDetailData.previous.slug.current}`,
              description: projectDetailData.previous.description,
            }}
            next={projectDetailData.next && {
              title: projectDetailData.next.title,
              href: `/projects/${projectDetailData.next.slug.current}`,
              description: projectDetailData.next.description,
            }}
          />
        </div>
      </article>
    </div>
  </main>
</LayoutBase>

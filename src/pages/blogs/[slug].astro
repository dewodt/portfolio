---
import DetailAdjacentNavigation from "@/components/ui/detail/DetailAdjacentNavigation.astro";
import DetailBack from "@/components/ui/detail/DetailBack.astro";
import DetailDate from "@/components/ui/detail/DetailDate.astro";
import DetailDescription from "@/components/ui/detail/DetailDescription.astro";
import Divider from "@/components/ui/Divider.astro";
import DetailImage from "@/components/ui/detail/DetailImage.astro";
import DetailMonoLabel from "@/components/ui/detail/DetailMonoLabel.astro";
import DetailTitle from "@/components/ui/detail/DetailTitle.astro";
import CustomPortableText from "@/components/ui/portable-text/CustomPortableText.astro";
import LayoutBase from "@/layouts/LayoutBase.astro";
import { sanityClient, blogDetailQuery, allBlogsQuery } from "@/lib/query";
import {
  type AllBlogsQueryResult,
  type BlogDetailQueryResult,
} from "@/types/sanity";

export const getStaticPaths = async () => {
  const allBlogsData =
    await sanityClient.fetch<AllBlogsQueryResult>(allBlogsQuery);

  const paths = allBlogsData.map((award) => ({
    params: {
      slug: award.slug.current,
    },
  }));

  return paths;
};

const blogDetailData = await sanityClient.fetch<BlogDetailQueryResult>(
  blogDetailQuery,
  { slug: Astro.params.slug },
);

if (!blogDetailData) {
  throw new Error("Data not found");
}
---

<LayoutBase
  title={`${blogDetailData.title} | Dewantoro Triatmojo`}
  description={blogDetailData.description}
  linkPreviewImage={blogDetailData.image}
>
  <main class="flex flex-auto justify-center px-5 py-10 sm:p-12 lg:p-16">
    <div class="flex w-full max-w-xl flex-col gap-6 lg:max-w-3xl lg:gap-8">
      {/* Back Button */}
      <div class="animate-fade-in-up" style="animation-delay: 0.05s;">
        <DetailBack href="/blogs" label="Back to Blogs" />
      </div>

      <article class="flex flex-col gap-6 lg:gap-8">
        {/* Hero Image */}
        <div
          class="border-border/50 bg-surface animate-fade-in-scale relative overflow-hidden rounded-xl border"
          style="animation-delay: 0.1s;"
        >
          <DetailImage
            src={blogDetailData.image.url!}
            alt={blogDetailData.image.alt}
          />
          <div
            class="from-background/40 pointer-events-none absolute inset-0 bg-linear-to-t via-transparent to-transparent"
          >
          </div>
        </div>

        {/* Header Section */}
        <header class="flex flex-col">
          {/* Mono label */}
          <div
            class="animate-fade-in-up mb-1 lg:mb-2"
            style="animation-delay: 0.15s;"
          >
            <DetailMonoLabel>{blogDetailData.detailMonoLabel}</DetailMonoLabel>
          </div>

          {/* Title */}
          <div
            class="animate-fade-in-up mb-2 lg:mb-3"
            style="animation-delay: 0.2s;"
          >
            <DetailTitle>{blogDetailData.title}</DetailTitle>
          </div>

          {/* Description */}
          <div
            class="animate-fade-in-up mb-2 lg:mb-3"
            style="animation-delay: 0.25s;"
          >
            <DetailDescription>{blogDetailData.description}</DetailDescription>
          </div>

          {/* Metadata row */}
          <div
            class="animate-fade-in-up flex flex-wrap items-center gap-3"
            style="animation-delay: 0.3s;"
          >
            <DetailDate date={blogDetailData.date} />
          </div>
        </header>

        {/* Divider */}
        <div class="animate-fade-in-up" style="animation-delay: 0.35s;">
          <Divider />
        </div>

        {/* Content Section */}
        <section
          class="animate-fade-in-up w-full"
          style="animation-delay: 0.4s;"
        >
          {
            (
              // @ts-ignore
              <CustomPortableText value={blogDetailData.content} />
            )
          }
        </section>

        {/* Adjacent Navigation */}
        <div class="animate-fade-in-up" style="animation-delay: 0.45s;">
          <Divider />
        </div>
        <div class="animate-fade-in-up" style="animation-delay: 0.5s;">
          <DetailAdjacentNavigation
            previous={blogDetailData.previous && {
              title: blogDetailData.previous.title,
              href: `/blogs/${blogDetailData.previous.slug.current}`,
              description: blogDetailData.previous.description,
            }}
            next={blogDetailData.next && {
              title: blogDetailData.next.title,
              href: `/blogs/${blogDetailData.next.slug.current}`,
              description: blogDetailData.next.description,
            }}
          />
        </div>
      </article>
    </div>
  </main>
</LayoutBase>

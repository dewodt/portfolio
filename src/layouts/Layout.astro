---
import "@fontsource-variable/inter";
import Navbar from "@/components/ui/Navbar.astro";
import Footer from "@/components/ui/Footer.astro";
import Head from "@/components/head/Head.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  {/* Common Head */}
  <Head title={title} />

  {/* Body Content */}
  <body class="flex min-h-screen flex-col bg-background font-inter">
    {/* Navbar */}
    <Navbar />

    {/* Content */}
    <slot />

    {/* Footer */}
    <Footer />
  </body>
</html>

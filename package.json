{
  "name": "portfolio",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "build:node": "astro check && astro build --node",
    "preview": "astro preview",
    "preview:node": "astro preview --node",
    "astro": "astro",
    "lint": "prettier --write  \"**/*.{js,jsx,ts,tsx,md,mdx,astro}\" && eslint --fix \"src/**/*.{js,ts,jsx,tsx,astro}\" && echo \"\\e[0;32m✔\\e[0;0m Linted files\"",
    "sanity:typegen": "rm -f sanity/schema/schema.json && echo \"\\e[0;32m✔\\e[0;0m Deleted old schema.json\" && rm -f src/types/sanity.ts && echo \"\\e[0;32m✔\\e[0;0m Deleted old type definition\" && sanity schema extract --path sanity/schema/schema.json --enforce-required-fields && sanity typegen generate",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/node": "^9.5.2",
    "@astrojs/react": "^4.4.2",
    "@astrojs/sitemap": "^3.7.0",
    "@astrojs/vercel": "^9.0.4",
    "@fontsource-variable/geist": "^5.2.8",
    "@fontsource-variable/geist-mono": "^5.2.7",
    "@sanity/astro": "^3.2.11",
    "@sanity/client": "^7.14.1",
    "@sanity/code-input": "^7.0.8",
    "@sanity/vision": "^5.8.1",
    "@shikijs/transformers": "^3.22.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "astro": "^5.17.1",
    "astro-portabletext": "^0.13.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "groq": "^5.8.1",
    "katex": "^0.16.28",
    "medium-zoom": "^1.1.0",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sanity": "^5.8.1",
    "sanity-plugin-dashboard-widget-vercel": "^3.1.6",
    "sanity-plugin-media": "^4.1.1",
    "styled-components": "^6.3.9",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/katex": "^0.16.7",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^0.31.4",
    "husky": "^9.0.11",
    "lint-staged": "^16.2.6",
    "prettier": "^3.2.5",
    "prettier-config-standard": "^7.0.0",
    "prettier-plugin-astro": "^0.13.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tsx": "^4.20.6"
  },
  "overrides": {
    "lodash": ">=4.17.23",
    "path-to-regexp": ">=6.3.0",
    "prismjs": ">=1.30.0",
    "glob": ">=10.5.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mdx,astro}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,ts,jsx,tsx,astro}": [
      "eslint --fix",
      "git add"
    ]
  }
}
